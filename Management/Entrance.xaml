<Window x:Class="Management.Entrance"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Management"
        mc:Ignorable="d"
        Title="Entrance" Height="400" Width="350">
    <Grid>
        <StackPanel>
            <TextBlock FontSize="28" HorizontalAlignment="Center" Margin="0,20,0,0">Вход </TextBlock>
            <TextBlock FontSize="20" HorizontalAlignment="Center" Margin="0,40,0,0">Логин</TextBlock>
            <TextBox Margin="0,10,0,0" Width="300" Height="25" FontSize="20" Name="LoginTextBox"></TextBox>
            <TextBlock  FontSize="20" HorizontalAlignment="Center" Margin="0,20,0,0">Пароль</TextBlock>
            <TextBox Margin="0,10,0,0" Width="300" Height="25" FontSize="20" Name="PasswordTextBox"></TextBox>
            <Button Margin="0,40,0,0" Height="30" Width="200" Content="Войти" FontSize="20" Background="#FF940000" Foreground="White" Click="EnterClick">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="20"></Setter>
                    </Style>
                </Button.Resources>
            </Button>
        </StackPanel>
    </Grid>
</Window>
